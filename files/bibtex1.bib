@article{Colliard2017,
   abstract = {Since the earliest reports in the late 2000s, the development of one-dimensional (1D) electrocatalysts for the oxygen reduction reaction (ORR) has undergone profound growth, both in terms of the breadth of structures developed, and in terms of the achievable activity and durability. In this chapter, we review the recent developments that have taken place over the last 5 years in this rapidly growing field. Specifically, we focus on exploring the fundamental structure-function relationships, including the effect of catalyst dimensions, composition, and surface structure on the corresponding catalytic activity and durability. We also examine the recent and growing implementation of combinatorial methods that merge catalyst design with in situ spectroscopic techniques and computational methods to develop new approaches to understanding the correlation between catalyst structure and activity. Starting with Pt-based systems, we discuss the recent insights into the size- and structure-dependent catalytic properties of 1D structures and explore the mechanism of degradation of 1D nanostructures under the operating conditions of fuel cell devices. Subsequently, we consider the emergent ability to precisely tune the three-dimensional structure and composition of Pt-based alloy and hierarchical structures, which has allowed for an unprecedented ability to engineer the electronic and structural properties of the catalysts. Finally, we explore how the advances in the development of Pt-based systems have enabled a transition toward catalysts composed of transition metals that are considerably less expensive and more abundant than Pt, yet maintain similar or even better activities than Pt.},
   author = {Ian Colliard and Christopher Koenigsmann},
   doi = {10.1016/B978-0-12-811112-3.00004-2},
   isbn = {9780128111130},
   journal = {One-dimensional Nanostructures for PEM Fuel Cell Applications},
   keywords = {Catalyst durability,Electrocatalysis,Hierarchical nanostructures,One-dimensional nanostructures,Oxygen reduction reaction,Precious metal},
   month = {8},
   pages = {19-48},
   publisher = {Elsevier Inc.},
   title = {One-Dimensional Nanostructured Catalysts for the Oxygen Reduction Reaction},
   year = {2017}
}
