   month = {3},
   pages = {7308-7315},
   pmid = {33415775},
   publisher = {John Wiley \& Sons, Ltd},
   title = {CeIV70 Oxosulfate Rings, Frameworks, Supramolecular Assembly, and Redox Activity**},
   volume = {60},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1002/anie.202016522 https://onlinelibrary.wiley.com/doi/abs/10.1002/anie.202016522 https://onlinelibrary.wiley.com/doi/10.1002/anie.202016522},
