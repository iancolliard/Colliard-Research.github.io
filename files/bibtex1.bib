   issn = {1520510X},
   issue = {12},
   journal = {Inorganic Chemistry},
   month = {6},
   pages = {7259-7269},
   pmid = {29877086},
   publisher = {American Chemical Society},
   title = {Solution and Solid State Structural Chemistry of Th(IV) and U(IV) 4-Hydroxybenzoates},
